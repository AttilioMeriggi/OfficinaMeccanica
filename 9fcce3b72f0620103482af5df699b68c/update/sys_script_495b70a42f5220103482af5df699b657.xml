        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var quantita = new VerificaQuantitaMagazzino();
	var verifica = quantita.verificaQuantita();
	
	if (verifica==true){
		var quantita_corr = current.getValue("quantita");
		if(quantita_corr>current.getValue("soglia")) {
			current.setValue("quantita", quantita_corr-1);
			gs.addInfoMessage(current.getValue("quantita"));
			gs.addErrorMessage("La richiesta del Meccanico è stata soddisfatta direttamente dalla scorta di magazzino");
		//current.setAbortAction(true);
		}
		else {
			current.stato=2;
			gs.addErrorMessage("La richiesta del Meccanico potrà essere soddisfatta dopo il rifornimento del magazzino");
		}
	}
	else {
		gs.addErrorMessage("Inviare fornitura per scorte");
		current.setAbortAction(true);
		
	}
})(current, previous);]]></script>
